@model AccountType
@{
    ViewData["Title"] = "Crear Tipo Cuenta";
}

<h1>Crear tipo de cuenta</h1>
<h5>El tipo de cuenta se refiere a que podemos agrupar cuentas.
    Ejemplos: Prestamos, tarjetas de credito, etc.
</h5>
<div asp-validation-summary="All" class="text-danger"></div>
<form asp-controller="AccountType" asp-action="Create">
    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input type="text" asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

