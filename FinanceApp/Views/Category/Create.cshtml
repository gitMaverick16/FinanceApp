@model Category

@{
    ViewData["Title"] = "Crear categoria";
}

<h1>Crear categoria</h1>
<h5>La categoria nos permite indicar en que gastamos nuestro dinero, tambien, de donde provienen nuestros ingresos</h5>
<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input  asp-for="Name" class="form-control"/>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="OperationTypeId" class="form-label"></label>
        <select asp-for="OperationTypeId" asp-items="Html.GetEnumSelectList<OperationType>()"
            class="form-select"></select>
        <span asp-validation-for="OperationTypeId" class="text-danger"></span>
    </div>

    <button class="btn btn-primary">Enviar</button>
    <a class="btn btn-secondary" asp-action="Index">Cancelar</a>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial">
}